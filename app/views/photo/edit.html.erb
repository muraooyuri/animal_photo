<main>
    <div class="container">
      <div class="row">
        <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <% if @animal.errors.any? %>
            <%= @animal.errors.count %>errors prohibited this obj from being saved:
              <ul>
                <% @animal.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>
          
        <h2>投稿編集</h2>
          <%= form_with model: @animal do |f| %>
            <div class="form-group">
              <label for="AnimalTitle">題名の編集</label><br>
                <%= f.text_field :title, autofocus: true, id:"animal_title", class: 'form-control' %><br>
            </div>
            <div class="form-group">
              <label for="AnimalBody">投稿内容の編集</label><br>
                <%= f.text_area :body, class: 'form-control' %><br>
            </div>
            <div class="row">
              <div class="col-12 col-md-5 mx-auto">
                <%= f.submit "編集する", class: 'btn btn-outline-secondary btn-block' %>
              </div>
            </div>
          <% end %>
        
          <div class="row">
            <div class="col-12 col-md-4 mx-auto">
              <%= link_to "ペット詳細" ,animal_path(@animal) %>
                |
              <%= link_to "戻る" ,toukens_path %>
            </div>
          </div>
          
        </div>
      </div>
    </div>
</main>